@using FinalProject.Application.Services.Queries.GetUsers
@model ResulGetUsertDto

@{
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}


    <div class="col-sm-12">
        <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
            <thead class="table-responsive table">
                <tr role="row">
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="مرورگر: activate to sort column ascending">آیدی</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="سیستم عامل: activate to sort column ascending">نام و نام خانوادگی</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="ورژن: activate to sort column ascending">ایمیل</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="امتیاز: activate to sort column ascending">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr role="row" class="odd">
                        <td  class="sorting_1">@item.Id</td>
                        <td  class="sorting_1">@item.Fullname</td>
                        <td  class="sorting_1">@item.Email</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2 flex-wrap">
                                <button class="btn btn-primary btn-sm">ویرایش</button>
                                <button class="btn btn-danger btn-sm">حذف</button>
                                <button class="btn btn-warning btn-sm text-white">غیرفعال</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
